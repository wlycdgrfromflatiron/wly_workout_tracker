<h3><%= label %>: </h3>

<form action="<%= action %>" method="POST">
    <% fields = ["username", "password"] %>
    <% fields.each do |field| %>
        <p>
            <label for="<%= field %>"><%= field.capitalize%>: </label>
            <input type="text" id="<%= field %>" name="<%= field %>">
        </p>
    <% end %>
</form >